<div id="conteudo">
  <br/>
    <h1 align="center">Cadastro de Unidades</h1>
    
  <br />
  <fieldset>
   <legend><font size=4>Unidade</font></legend>
    <p>
      <b>Nome:</b>
      <td><%=h @unidade.nome %></td>
    </p>
    <p>
      <b>Tipo:</b>
      <td><%=h @unidade.nome_tipo %></td>
    </p>
    <p>
      <b>Localização</b>
      <td><%=h @unidade.regiao.nome %></td>
    </p>
  </fieldset><br/>

  | <%= link_to 'Alterar', edit_unidade_path(@unidade) %> |
  <%= link_to 'Voltar', unidades_path %> |
</div>