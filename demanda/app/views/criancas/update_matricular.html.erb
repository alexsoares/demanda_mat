<div id="conteudo">
  <br/>
    <h1 align="center">Matricular Criança - <%= @matricula.nome %></h1>
<br/>
<% form_for(@matricula, :url => matricular_path(@matricula) ) do |f|%>
  <fieldset>
    <table>
      <tr>
        <td><b>Ano Letivo</b></td>
        <td><%= f.select :ano_letivo,Vaga::ANO %></td>
         <%= observe_field 'crianca_ano_letivo',
           :with => 'crianca_ano_letivo',
           :url => { :action => 'guarda_anoletivo' }
         %>

      </tr>
      <tr>
         <td><b>Unidade Matriculada</b></td>
         <td><%= f.collection_select :unidade_matricula, @unidade_matricula, :id, :nome %> </td>
         <td> <div id="unidade"></div></td>
         <%= observe_field 'crianca_unidade_matricula',
           :with => 'crianca_unidade_matricula',
           :url => { :action => 'verifica_vagas' }           
         %>
       </tr>
      <tr>
        <td><b>Matriculado</b></td>
        <td><%= f.check_box :matricula, :checked => true %>SIM</td>
      </tr>
       <tr>
         <td><b>Observação</b></td>
         <td><%= f.text_field :obs %></td>
       </tr>
    </table>
  <br/>
    <table>
      <tr>
        <td><b><%= f.label  :n_especial, 'Possui necessidade especial?' %></b></td>
        <td><%= f.check_box :n_especial %>SIM</td>
      </tr>
      <tr>
        <td><b><%= f.label  :historico_contato, 'Históricos de Contatos' %></b><br/>
        <%= f.text_area  :historico_contato %></td>
        <td><b><%= f.label :necessidade, 'Descricao Necessidade' %></b><br/>
        <%= f.text_area  :necessidade %></td>
      </tr>
    </table>
  </fieldset>
  <br/>
  <fieldset>
    <p>
     <div id="Certeza">
      <%= f.submit "Matricular"%>      
     </div>
    </p>
  </fieldset>
<% end %>
  <br/>

</div>
