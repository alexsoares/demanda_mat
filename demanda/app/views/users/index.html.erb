<table border="1" width="50%" frame="box" rules="all">
  <tr>
        <td width="100%" colspan="5" align="center"><h1>Listagem Usuários Cadastrados</h1></td>
  </tr>
  <tr>
    <th align="center" bgcolor="gray">LOGIN</th>
    <th align="center" bgcolor="gray">STATUS</th>
  </tr>
<%@usuarios = User.find(:all, :order => 'login') %>
<% for user in @usuarios %>
  <tr>
    <td align="left"><%= user.login %></td>
    <% if user.activated_at == nil then %>
      <td align="Center">DESATIVADO</td>
    <%else%>
      <td align="center">ATIVO</td>
    <%end%>
  </tr>
